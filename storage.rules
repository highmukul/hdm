rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to product images
    match /products/{path=**} {
      allow read;
    }

    // Allow authenticated users to write to their own verification folder
    match /captain_verification/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
