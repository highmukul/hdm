rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // This rule allows authenticated users to write to the 'products' folder
    // and any of its subfolders (like products/store-id/).
    match /products/{path=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /captain-docs/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
