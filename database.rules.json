{
  "rules": {
    "stores": {
      ".read": true,
      ".write": "auth != null && auth.token.admin == true"
    },
    "products": {
      ".read": true,
      ".write": "auth != null && auth.token.admin == true"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid || auth.token.admin == true",
        ".write": "auth != null && auth.uid == $uid || auth.token.admin == true"
      }
    },
    "orders": {
      "$orderId": {
        ".read": "auth != null && (data.child('customerId').val() == auth.uid || auth.token.admin == true)",
        ".write": "auth != null && (data.child('customerId').val() == auth.uid || auth.token.admin == true)"
      }
    },
    "captains": {
      "$captainId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $captainId"
      }
    },
    "analytics": {
      ".read": "auth.token.admin == true",
      ".write": "auth.token.admin == true"
    }
  }
}
