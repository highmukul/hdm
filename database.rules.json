rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /stores/{storeId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;

      // ADDED RULE FOR THE PRODUCTS SUBCOLLECTION
      match /products/{productId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.admin == true;
      }
    }

    // This rule is for the root products collection
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    match /orders/{orderId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.customerId || request.auth.token.admin == true || request.auth.uid == resource.data.captainId);
    }

    match /captains/{captainId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && request.auth.uid == captainId;
    }

    match /analytics/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
